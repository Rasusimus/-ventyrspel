from random import randint,choice
from time import sleep


class Colors: #F칛rger
    red = "\u001b[31m"
    yellow = "\u001b[33m"
    green = "\u001b[32m"
    black = "\u001b[30m"
    bold = "\u001b[1m"
    background = "\u001b[47m"
    endc = "\u001b[0m"


class Items: #Alla items
    def __init__(self, name, attack_bonus, defence_bonus, holy=False, cursed=False):
        self.name = name
        self.str_bonus = attack_bonus
        self.def_bonus = defence_bonus
        self.holy = holy
        self.cursed = cursed
        if "Holy" in self.name:
            self.holy = True
        elif "Cursed" in self.name:
            self.cursed = True


class Stats: #Hur starka monstrerna och spelarna 칛r 
    def __init__(self, strength, defence, dexterity, hp):
        self.strength = strength
        self.defence = defence
        self.dexterity = dexterity
        self.hp = hp
    lvl = 1
    lives = 3
    inventory = []


class D칬rr: # D칬rrarna best칛ms ifall de inneh친ller ett monster, en kista eller en f칛lla
    def best칛m(spelare):
        best_tal = randint(1,10)
        if best_tal > 5:
            fall = 1
        elif best_tal < 5:
            fall = 2
        else:
            fall = 3
        return fall
    

item_names = ["Bracelet", "Necklace", "Magic Scroll", "Sword", "Battleaxe", "Bow", "Spear", "Dagger", "Shield", "Chestplate", "Health potion"] #Alla olika namn som items kan ha
item_prefix = ["Holy", "Cursed"] #Om items har speciela egenskaper


def slow_print(text, tid): #Funktion f칬r att printa ut texten l친ngsamt
    for i in text:
        print(i, end="", flush=True)
        sleep(tid)
    print()


def skapa_karakt칛r(): #Skapar din karakt칛r
    po칛ng = 15
    defence = 0
    strength = 0
    dexterity = 0
    slow_print("Du ska skapa din karakt칛r du har sammanlagt 15 po칛ng att spendera p친 Styrka (STR), F칬rsvar (DEF) och Skicklighet (DEX)",0.02)
    slow_print("Beh칬ver du en f칬rklaring av alla stats?", 0.02)
    while True:
        f칬rklaring = input("'Ja' eller 'Nej' -> ").lower().replace(" ", "").replace(".", "")
        if f칬rklaring == "ja":
            slow_print("""Styrka anv칛nds f칬r att g칬ra mer skada p친 monstrerna med dina vapen eller h칛nder.
F칬rsvar anv칛nds f칬r att ta mindre skada fr친n monster.
Skicklighet anv칛nds f칬r att undvika f칛llor och monster (om du har 0 skicklighet 칛r det om칬jligt att fly!)""", 0.02)
            break
        elif f칬rklaring not in ["nej", "ja"]:
            print(f"{Colors.red + Colors.bold}Ogiltig input!{Colors.endc}")
        else:
            break
    print("\n----------------------")
    while po칛ng > 0: #Processen av att spendera po칛ng p친 karakt칛ren
        try:
            print()
            slow_print(f"Du har {po칛ng} po칛ng att spendera.",0.02)
            slow_print("Hur m친nga po칛ng vill du spendera p친 styrka?",0.02)
            input_STR = int(input("-> "))
            if input_STR <= po칛ng:
                po칛ng -= input_STR
                strength += input_STR
            else:
                print("Du har inte s친 m친nga po칛ng!")
        except ValueError:
            print("Det 칛r inte en siffra!")
        if po칛ng != 0:
            try:
                print()
                slow_print(f"Du har {po칛ng} po칛ng att spendera.",0.02)
                slow_print("Hur m친nga po칛ng vill du spendera p친 f칬rsvar?",0.02)
                input_DEF = int(input("-> "))
                if input_DEF <= po칛ng:
                    po칛ng -= input_DEF
                    defence += input_DEF
                else: 
                    print("Du har inte s친 m친nga po칛ng!")
            except ValueError:
                print("Det 칛r inte en siffra!")
            else:
                input_STR = 0
        if po칛ng != 0:
            try:
                print()
                slow_print(f"Du har {po칛ng} po칛ng att spendera.",0.02)
                slow_print("Hur m친nga vill du spendera p친 skicklighet?",0.02)
                input_DEX = int(input("-> "))
                if input_DEX <= po칛ng:
                    po칛ng -= input_DEX
                    dexterity += input_DEX
                else:
                    print("Du har inte s친 m친nga po칛ng!")
            except ValueError:
                print("Det 칛r inte en siffra!")
        else:
            input_DEX = 0
    spelare = Stats(strength, defence, dexterity, 50)
    print()
    return spelare


def skapa_d칬rr(choice, spelare): #Skapar en d칬rr 
    d칬rr_1 = D칬rr.best칛m(spelare)
    d칬rr_2 = D칬rr.best칛m(spelare)
    d칬rr_3 = D칬rr.best칛m(spelare)
    if choice == 1:
        return d칬rr_1
    elif choice == 2:
        return d칬rr_2
    else: 
        return d칬rr_3


def skapa_monster(spelare): # Skapar ett monster och sk칬ter "slagsm친let"
    if spelare.lvl < 5:
        monstret = Stats(randint(5,10),randint(5,10), 0, randint(30,50))
    elif spelare.lvl < 8:
        monstret = Stats(randint(8,15),randint(8,15),0,randint(40,70))
    else:
         monstret = Stats(randint(10,18),randint(10,18),0,randint(60,100))
    print(f"\nDu st칬ter p친 ett monster bakom d칬rren den har styrkan {monstret.strength}, f칬rsvaret {monstret.defence} och hp {monstret.hp}")
    while True:
        f칬rsta_val = input("Vill du sl친ss (1) eller f칬rs칬ka rymma (2)? -> ").lower().replace(" ", "")
        if f칬rsta_val in ["2", "rymma", "rym"]:
            sannolikhet = ((spelare.dexterity)*5)
            rng = randint(1,100)
            if rng > sannolikhet:
                print(f"{Colors.red}Du lyckades inte rymma och m친ste sl친ss!{Colors.endc}")
                print()
                combat(spelare, monstret)
                break
            else:
                print("Du lyckades rymma!\n")
                break
        elif f칬rsta_val in ["1", "sl친ss"]:
            print()
            combat(spelare, monstret)
            break
        else:
            print(f"{Colors.bold + Colors.red}Ogiltig input!{Colors.endc}")


def skapa_kista(spelare): #Skapar en kista
    item = skapa_item(spelare)
    if item.name == "Health potion":
        print(f"{Colors.green}Du har hittat ett item! Ditt item 칛r en health potion det ger din karakt칛r mer liv, HP +15{Colors.endc}")
    else:
        print(f"{Colors.green}\nDu har hittat ett item!\nDitt item 칛r <<{item.name}>>{Colors.endc}\n  {Colors.black + Colors.background} +{item.str_bonus} STR {Colors.endc} {Colors.black + Colors.background} +{item.def_bonus} DEF {Colors.endc}\n")
        exists = False
        for equipement in spelare.inventory:
            if item.name == equipement.name:
                exists = True
                print("Du har redan ett item med samma namn, vill du byta ut det du har mot det du hittade?")
                print(f"Ditt item: <<{item.name}>> (+{equipement.str_bonus} STR) (+{equipement.def_bonus})")
                while True:
                    val = input("Ja/Nej -> ").lower().replace(" ", "").replace(".", "")
                    if val == "ja":
                        spelare.strength -= equipement.str_bonus
                        spelare.defence -= equipement.def_bonus
                        spelare.inventory.remove(equipement)
                        spelare.inventory.append(item)
                        spelare.strength += item.str_bonus
                        spelare.defence += item.def_bonus
                        print("Du har valt att byta ut ditt item.\n")
                        break
                    elif val == "nej":
                        print("Du har valt att beh친lla ditt item.\n")
                        break
                    else:
                        print(f"{Colors.red + Colors.bold}Ogiltig input!{Colors.endc}")
                break
        if len(spelare.inventory) < 5 and exists is False: #Tittar om du f친r plats med det item du hittade och tittar s친 att du inte redan har ett s친nt item
            spelare.strength += item.str_bonus
            spelare.defence += item.def_bonus
            spelare.inventory.append(item)
        else:
            while True:
                if exists is True:
                    break
                print("Ditt inventory:")
                nummer = 1
                for it in spelare.inventory: #Skriver ut hela ditt inventory
                        print(f"  {nummer}: {it.name} (+{it.str_bonus} STR) (+{it.def_bonus} DEF)")
                        nummer += 1
                val = input("Ditt inventory 칛r fullt, vill du byta ut ett item (1) eller l칛mna kvar det (2)? -> ").lower().strip().replace(".", "")
                if val in ["1", "byta ut", "byta", "byt"]:
                    while True:
                        try:
                            valda_item = int(input("V칛lj vilket item du vill byta ut med (1-5) -> ")) - 1 #Om vi har tid 칛ndrar vi s친 att vi kan skriva namnet p친 itemet
                            if valda_item > 4 or valda_item < 0:
                                print("Du har inte s친 m친nga items.")
                            else:
                                break
                        except ValueError:
                            print(f"{Colors.bold + Colors.red}Ogiltig input!{Colors.endc}")
                    spelare.strength -= spelare.inventory[valda_item].str_bonus
                    spelare.defence -= spelare.inventory[valda_item].def_bonus
                    spelare.inventory.pop(valda_item)
                    spelare.inventory.append(item)
                    spelare.strength += item.str_bonus
                    spelare.defence += item.def_bonus
                    print("Ditt item har bytts ut!\n")
                    break
                elif val in ["2", "l칛mna kvar det", "l칛mna kvar", "l칛mna", "byt inte ut", "byt inte"]:
                    print()
                    break
                else: 
                    print(f"{Colors.bold + Colors.red}Ogiltig input{Colors.endc}")
                

def skapa_f칛lla(spelare): #Skapar en f칛lla och tar bort hp fr친n spelaren
    skada = randint(1,5)
    print(f"\nDu hamnar i en f칛lla!")
    input(f"Klicka p친 {Colors.bold}Enter{Colors.endc} f칬r att f칬rs칬ka fly!")
    sannolikhet = ((spelare.dexterity)*5)
    rng = randint(1,100)
    if rng > sannolikhet:
        print(f"{Colors.red}Du lyckades inte undvika f칛llan!{Colors.endc}")
        print(f"Du tar {skada} skada!\n")
        spelare.hp -= (skada)
        if spelare.hp <= 0:
            slow_print("F칛llan har gjort dig v칛ldigt svag, men du teleporteras till ett tomt rum och l칛ks till 50 HP.", 0.02)
    else:
        print("Du lyckades undvika f칛llan!\n")


def skapa_item(spelare): #Skapar ett item, det kan ha olika bonusar beroende p친 vad namnet 칛r.
    name = choice(item_names)
    chans = randint(1, 10)
    if chans > 8:
        prefix = choice(item_prefix) + " "
    else:
        prefix = ""
    if name in ["Bracelet", "Necklace"]:
        skapade_item = Items(name, randint(0,3), randint(0,3))
    elif name in ["Sword", "Battleaxe", "Bow", "Spear", "Dagger"]:
        if prefix.strip() == "Holy":
            boost = 5
        elif prefix.strip() == "Cursed":
            boost = 3
        else:
            boost = 0
        skapade_item = Items((prefix + name), randint((1 + boost), (4 + boost)), randint(0,0))
    elif name == "Magic Scroll":
        skapade_item = Items(name, 0, 0)
    elif name == "Health potion":
        spelare.hp += 15
        skapade_item = Items(name, 0, 0)
    elif name in ["Shield", "Chestplate"]:
        skapade_item = Items(name, randint(0,0), randint(1,4))
    return skapade_item


def lvl_lives_kolla(self): #Funktion som kollar i b칬rjan av varje runda ifall spelaren har vunnit eller f칬rlorat 칛n
    if self.lives < 1:
        ret_tal = 1
    elif self.lvl == 10:
        ret_tal = 2
    else:
        ret_tal = 3
    return ret_tal
    

def open_door(spelare): #칐ppnar en d칬rr
    while True:
        try:
            val = input(Colors.black + "   Vilken d칬rr vill du 칬ppna: V칛nster (1), Mitten (2), H칬ger (3)? -> " + Colors.endc).lower().replace(" ", "").replace(".", "")
            if val in ["1", "2", "3", "v칛nster", "fram", "fram친t", "mitten", "h칬ger"]:
                break
            else:
                print(Colors.red + "   Finns inte den m칛ngd d칬rrar!" + Colors.endc)
        except ValueError:
            print(f"{Colors.red + Colors.bold}Ogiltig input!{Colors.endc}")
    d칬rr = skapa_d칬rr(val, spelare)
    if d칬rr == 1:
        skapa_kista(spelare)
    elif d칬rr == 2:
        skapa_monster(spelare)
    elif d칬rr == 3:
        skapa_f칛lla(spelare)


def kolla_inventory(spelare): #Kollar spelarens inventory
    if len(spelare.inventory) == 0:
        print("\nDu har inget i ditt inventory\n")
    else: 
        print("\nDitt inventory:")
        for item in spelare.inventory: 
            print(f"  > {item.name} (+{item.str_bonus} STR) (+{item.def_bonus} DEF)")
        print()
        

def visa_egenskaper(spelare): #Visar spelarens egenskaper
    print(f"\nDina egenskaper:\n   > Styrka: {spelare.strength}游눩\n   > F칬rsvar: {spelare.defence}游띠勇끂n   > Skicklighet: {spelare.dexterity}游끢\n   > HP: {spelare.hp}仇벒잺\n   > LVL: {spelare.lvl}九\n   > Liv: {spelare.lives}游눙\n")


def combat(spelare, monster): #Sk칬ter combat systemet n칛r man sl친ss mot ett monster
    if len(spelare.inventory) > 0:
        for item in spelare.inventory:
            if "Holy" in item.name or "Cursed" in item.name:
                player_dmg_type = "weapon"
                break
            if item.name in ["Sword", "Bow", "Battleaxe", "Spear", "Dagger"]:
                player_dmg_type = "weapon"
                break
            else:
                player_dmg_type = "fist"
    else:
        player_dmg_type = "fist"

    while True:
        if monster.hp <= 0: #Kollar ifall slagsm친let fortfarande 칛r ig친ng
            print("Monstret dog och du vann!\n")
            spelare.lvl+=1
            break
        elif spelare.hp <= 0:
            if spelare.lives != 1:
                slow_print("Monstret besegrade dig, men du blir teleporterad till ett tomt rum innan monstret hinner d칬da dig.", 0.01)
            else:
                print(f"{Colors.red + Colors.bold}Monstret har d칬dat dig!{Colors.endc}")
            break
        else:
            print("Vad vill du g칬ra?")
            choice = input("   > Anfalla med vapen (1)\n   > Anv칛nda en Magic Scroll (2)\n   > Fly (3)\n   -> ").lower().strip().replace(".", "")
            if choice in ["1", "anfalla med vapen", "anfalla", "anfall", "vapen", "attack"]:             
                print("\nDu anfaller monstret.")
                if player_dmg_type == "weapon":
                    for item in spelare.inventory:#Ser ifall n친got av vapnena i inventory har speciela effekter
                        if item.cursed:
                            while True:
                                print("Du har ett item som 칛r f칬rbannat, det kommer att g칬ra skada mot dig om du anv칛nder det.\nVill du anv칛nda det?")
                                choice_curse = input("Ja (1)/Nej (2) -> ").lower().replace(" ", "")
                                if choice_curse in ["1", "ja"]: 
                                    damage = randint(4,8)
                                    monster.hp -= damage
                                    spelare.hp -= damage//2
                                    print(f"\nDu anv칛nder vapnet och g칬r {damage} extra skada till monstret.\nMen du tar sj칛lv {damage//2} skada")
                                    player_dmg = randint(1, 10) + spelare.strength
                                    break
                                elif choice_curse in ["2", "nej"]:
                                    spelare.strength -= item.str_bonus
                                    player_dmg = randint(1, 10) + spelare.strength
                                    spelare.strength += item.str_bonus
                                    break
                                else:
                                    print(f"{Colors.red + Colors.bold}Ogiltigt input!{Colors.endc}")
                            break
                        else:
                            player_dmg = randint(1, 10)+spelare.strength
                    
                else:
                    player_dmg = randint(1, 4)+spelare.strength #Om spelaren inte har ett vapen att anfalla med 
                if player_dmg > monster.defence//2:
                    print(f"Monstret tar {player_dmg - monster.defence//2} skada.")
                    monster.hp -= player_dmg - (monster.defence//2)
                    if monster.hp > 0:
                        print(f"Den har nu {monster.hp} HP\n")
                else:
                    print("Monstrets f칬rsvar var f칬r h칬gt och tog d칛rf칬r ingen skada!\n")
                if monster.hp > 0:                                                          #Monstrets tur att anfalla
                    monster_dmg = randint(1, 5) + monster.strength
                    print("Monstret anfaller dig!")
                    if monster_dmg <= spelare.defence//2:
                        print("Din rustning var f칬r stark f칬r monstrets attack!")
                    else:
                        print(f"Du tog {monster_dmg - spelare.defence//2} skada.")
                        spelare.hp -= monster_dmg-spelare.defence//2
                        if spelare.hp > 0:
                            print(f"Spelarens HP 칛r nere p친 {spelare.hp}\n")

            elif choice in ["2", "anv칛nda en magic scroll", "anv칛nd en magic scroll", "anv칛nda magic scroll", "anv칛nd magic scroll", "magic scroll"]: #Alternativt s칛tt att anfalla monstret
                har_scroll = False
                for item in spelare.inventory:
                    if item.name == "Magic Scroll":
                        print("Du har anv칛nt en Magic Scroll!")
                        scroll_dmg = randint(10, 20)
                        print(f"Din Magic Scroll g칬r {scroll_dmg} skada!")
                        monster.hp -= scroll_dmg
                        if monster.hp > 0:
                            print(f"Monstrets HP 칛r nu {monster.hp}")
                        print("Din Magic Scroll brinner upp f칬r du anv칛nde den.")
                        spelare.inventory.remove(item)
                        har_scroll = True
                        break
                if not har_scroll:
                    print("Du har ingen Magic Scroll!\n")
                
            elif choice in ["3", "fly"]: #Spelaren f칬rs칬ker att fly fr친n slagsm친let
                sannolikhet = ((spelare.dexterity)*5) + 2
                rng = randint(1,100)
                if rng > sannolikhet:
                    print(f"\n{Colors.red}Du lyckades inte rymma och m친ste sl친ss!{Colors.endc}")
                    print("Monstret anfaller dig!")
                    monster_dmg = randint(1, 5) + monster.strength//2
                    if monster_dmg < spelare.defence//2:
                        print("Din rustning var f칬r stark f칬r monstrets attack.")
                    else:
                        print(f"Du tog {monster_dmg - spelare.defence//2} skada.")
                        spelare.hp -= monster_dmg-spelare.defence//2
                        if spelare.hp > 0:
                            print(f"Spelarens HP 칛r nere p친 {spelare.hp}\n")
                        else:
                            print()
                else:
                    print("Du lyckades rymma!")
                    break
            else:
                print(f"{Colors.red}Det var inte ett val!{Colors.endc}")


def choose(spelare): #Ser till att du kan v칛lja vad du vill g칬ra
    while True:
        print("----------------------\n")
        val = input("Vad vill du g칬ra?\n   칐ppna en d칬rr (1)\n   Kolla ditt inventory (2)\n   Visa dina egenskaper (3)\n   -> ").lower().strip()
        if val in ["1", "칬ppna en d칬rr", "칬ppna d칬rr", "d칬rr"]:
            open_door(spelare)
            break
        elif val in ["2","kolla mitt inventory", "kolla inventory", "mitt inventory", "inventory"]:
            kolla_inventory(spelare)
            break
        elif val in ["3", "visa mina egenskaper", "visa egenskaper", "mina egenskaper", "egenskaper"]:
            visa_egenskaper(spelare)
            break
        else:
            print(f"{Colors.red + Colors.bold}Ogiltig input{Colors.endc}")


def game(): #Samlar massor av funktioner och tittar om du har vunnit eller inte
    spelare = skapa_karakt칛r()
    while True:
        check = lvl_lives_kolla(spelare)
        if check == 1:
            slow_print(f"{Colors.red + Colors.bold}Du f칬rlorade :({Colors.endc}", 0.06)
            break
        elif check == 2:
            slow_print(f"{Colors.bold + Colors.yellow}Du vann :){Colors.endc}", 0.05)
            break
        else:
            choose(spelare)
            if spelare.hp < 1:
                slow_print("Du har f칬rlorat ett liv!\n", 0.04)
                spelare.lives -= 1
                spelare.hp = 50

while True: #K칬r spelet
    game() 
    while True:
        print("Vill du spela igen? Ja (1) eller Nej (2):")
        igen = input("-> ").lower().replace(" ", "")
        if igen in ["2", "nej"]:
            slow_print(f"{Colors.green + Colors.bold}Tack f칬r att du spelade! ^_^{Colors.endc}", 0.04)
            break
        elif igen in ["1", "ja"]:
            slow_print("D친 k칬r vi!", 0.04)
            break
        else:
            print(f"{Colors.red + Colors.bold}Ogiltig input!{Colors.endc}")
    if igen in ["2", "nej"]:
        break
